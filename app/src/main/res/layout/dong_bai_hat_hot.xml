<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:background="@drawable/custom_background_bai_hat"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageViewBaiHatHot"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:text="Tên bài hát"
        android:textSize="18sp"
        android:textColor="#232222"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@id/imageViewBaiHatHot"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/textViewTenBaiHatHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#857878"
        android:textSize="18sp"
        android:text="Ca si"
        android:singleLine="true"
        android:layout_toRightOf="@id/imageViewBaiHatHot"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textViewTenBaiHatHot"
        android:id="@+id/textViewTenCaSiBaiHatHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:id="@+id/imageViewLuotThich"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</RelativeLayout>