<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/relativeLayoutChuDeTheLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#FF0031"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Chủ đề và thể loại"
            android:id="@+id/textViewTitleChuDeTheLoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewXemThemChuDeThezLoai"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:textColor="#00B0FF"
            android:textStyle="italic"
            android:textSize="15dp"
            android:text="Xem thêm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <HorizontalScrollView
        android:scrollbars="none"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@id/relativeLayoutChuDeTheLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </HorizontalScrollView>

</RelativeLayout>